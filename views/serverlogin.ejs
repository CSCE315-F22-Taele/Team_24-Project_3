<style>
  #sameline {
    overflow: hidden;
    white-space: nowrap;
    padding-top: 15px;
    padding-bottom: 15px;
  }

  a:link {
    color: black;
  }

  a:visited {
    color: black;
  }

  a:hover {
    color: #e6ebe7;
  }
  
  body  {
    background-image: linear-gradient(to bottom, rgba(78, 78, 78, 0.52), rgba(133, 67, 84, 0.73)),
                      url('/testbackground.jpg');
    background-position: center center;
