<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body text-center">
        <div id="google_translate_id"></div>

<div><a href="/" class="btn btn-primary btn-block mb-2">Return</a></div>

<form action = "/serverlogin/serverlogin" method = "POST"> 
    <div class="col-sm">
    <input type = "text" id = "username" name="username" placeholder="Username" required="required"/>
    </div>
    <div class="col-sm">
    <input type = "text" id = "password" name="password" placeholder="Password" required="required"/>
    </div>
    <div class="col-sm">
        <input type = "submit" value = "Login"/>
    </div>
</form>
<ul>
    <div class="col-sm">
      <div class="text-danger">
    <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
    <li><%= error.message %></li>
    <% }) %> <% } %>
  </div>
  </div>
  </ul>