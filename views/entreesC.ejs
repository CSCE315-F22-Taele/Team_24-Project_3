<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <script src="https://translate.google.com/translate_a/element.js?cb=translateDropdown"></script>
      <script>
        function translateDropdown() {
          new google.translate.TranslateElement(
            { pageLanguage: 'en' }, 'google_translate_id'
          )
        }
      </script>
      <div id="google_translate_id"></div>
      <a href="/customers/orderC" class="btn btn-primary btn-block mb-2">Return</a>
      <h1>Entrees</h1>
      <ul>
        <div class="col-sm">
          <div class="text-danger">
            <% if (typeof errors !='undefined' ) { %>
              <% errors.forEach(error=> { %>
                <li>
                  <%= error.message %>
                </li>
                <% }) %>
                  <% } %>
          </div>
        </div>
      </ul>
      <% for (var i=0; i < entreearr.length; i++ ) { %>
        <form action="/customers/orderC/entreesC/entree/<%= i %>" method="POST">
          <div class="row">
            <input type="submit" value="<%= entreearr[i].item %> : $<%= entreearr[i].price %>" />
        </form>
        <% } %>
